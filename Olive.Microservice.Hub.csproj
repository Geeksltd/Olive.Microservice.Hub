    <PackageProjectUrl>https://github.com/Geeksltd/Olive</PackageProjectUrl>
    <Version>1.0.36</Version>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <NoWarn>1701;1702;8370</NoWarn>
  </PropertyGroup>

  <ItemGroup>
